{% style %}
  video {
    {% if block.settings.full_width_video != true %}
    width: 80vw;
    {%else%}
    width: 100vw;
    {% endif %}
  }

  .stored-video {
    text-align: center;
  }

  .video-section h2 {
    text-align: {{section.settings.heading_alignment}};
    padding: 1rem 2rem;
  }
{% endstyle %}
<div class="video-section">
  <h2>{{ section.settings.heading }}</h2>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'video-stored' %}
        <div class="stored-video" {{ block.shopify_attributes }}>
          {{
            block.settings.video
            | media_tag:
              image_size: '1100x',
              autoplay: block.settings.enable_video_autoplay,
              loop: block.settings.enable_video_looping,
              controls: block.settings.enable_video_controls,
              muted: block.settings.enable_video_audio
          }}
        </div>
      {% when 'external-video' %}
        <div class="external-video" {{ block.shopify_attributes }}>
          {%- if block.settings.video_url.type == 'youtube' -%}
            <iframe
              src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}"
              class="youtube"
              title="{{ block.settings.description | escape }}"
              allow="autoplay; encrypted-media"
            ></iframe>
          {%- else -%}
            <iframe
              src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}"
              class="vimeo"
              title="{{ block.settings.description | escape }}"
              allow="autoplay; encrypted-media"
            ></iframe>
          {%- endif -%}
        </div>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Videos",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Custom content heading",
      "default": "Title"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left Alignment"
        },
        {
          "value": "center",
          "label": "Center Alignment"
        },
        {
          "value": "right",
          "label": "Right Alignment"
        }
      ],
      "default": "center",
      "label": "Heading Alignment"
    }
  ],
  "max_blocks": 1,
  "blocks": [
    {
      "name": "Shopify Hosted Video",
      "type": "video-stored",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "A Shopify-hosted video"
        },
        {
          "type": "checkbox",
          "id": "full_width_video",
          "label": "Full Width Video",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "enable_video_looping",
          "label": "Enable Video Looping",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "enable_video_controls",
          "label": "Show Video Controls",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "enable_video_autoplay",
          "label": "Autoplay Video",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "enable_video_audio",
          "label": "Mute Video",
          "default": true
        }
      ]
    },
    {
      "name": "External Video",
      "type": "external-video",
      "settings": [
        {
          "type": "video_url",
          "id": "video_url",
          "accept": ["youtube", "vimeo"],
          "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
          "label": "URL",
          "info": "Video plays in the page."
        },
        {
          "type": "text",
          "id": "description",
          "label": "Video alt text",
          "info": "Describe the video for customers using screen readers."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Videos"
    }
  ]
}
{% endschema %}
