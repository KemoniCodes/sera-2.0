{% schema %}
{
  "name": "t:sections.home-hero.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "background",
      "label": "Mobile Background Img"
    }
  ]
}
{% endschema %}
